{
  "name": "umbrella-system",
  "version": "1.0.0",
  "description": "Real-time umbrella borrowing system for PCSHSPL - A Progressive Web App built with React and Firebase",
  "author": {
    "name": "Sorawit Trongtokit",
    "school": "PCSHSPL (Princess Chulabhorn Science High School Phitsanulok)"
  },
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "build:prod": "cross-env NODE_ENV=production vite build",
    "dev": "vite --host",
    "preview": "vite preview",
    "deploy": "npm run build && firebase deploy",
    "deploy:prod": "npm run build:prod && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only database",
    "deploy:full": "npm run pre-commit && npm run build && firebase deploy",
    "check": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest --run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lighthouse": "lighthouse http://localhost:5173 --view",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "pre-commit": "npm run lint && npm run format:check && npm run test:run",
    "security-check": "npm audit --audit-level moderate",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:win": "rmdir /s /q dist & rmdir /s /q node_modules\\.vite",
    "setup": "npm install && npm run check",
    "firebase:emulator": "firebase emulators:start",
    "optimize": "npm run clean && npm run build && npm run analyze"
  },
  "dependencies": {
